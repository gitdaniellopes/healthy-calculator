<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="imcTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/IMC</item>
        <item name="colorPrimaryDark">@color/IMC</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TbmTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FcmTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/FCM</item>
        <item name="colorPrimaryDark">@color/FCM</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
    </style>


    <style name="TextViewForm">
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
    </style>

    <style name="EditTextForm">
        <item name="android:inputType">number</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">30dp</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">30dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:background">@drawable/bg_edit_text_tbm</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonForm">
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:background">@drawable/bg_button_accent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonFormFCM">
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:background">@drawable/bg_button_accent_fcm</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonFormTmb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">20dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:background">@drawable/bg_button_accent_tbm</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Herdando as caracteristicas do TextViewForm, assim não tenho repetição.-->
    <style name="SpinnerForm" parent="TextViewForm" />

</resources>
